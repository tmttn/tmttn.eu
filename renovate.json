{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended", 
    "default:automergeMinor", 
    "default:enableVulnerabilityAlerts", 
    "npm:unpublishSafe",
    "replacements:all",
    "helpers:followTypescriptNext", 
    "security:openssf-scorecard"
  ],
  "commitMessagePrefix": "🔧 ",
  "commitMessageAction": "chore",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newValue}}",
  "commitMessage": "🔧 chore: update {{depName}} to {{newValue}}",
  "prTitle": "🔧 chore: update {{depName}} to {{newValue}}",
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "commitMessage": "⬆️ chore: update {{depName}} to {{newValue}}",
      "prTitle": "⬆️ chore: update {{depName}} to {{newValue}}"
    },
    {
      "matchUpdateTypes": ["minor"],
      "commitMessage": "🔧 chore: update {{depName}} to {{newValue}}",
      "prTitle": "🔧 chore: update {{depName}} to {{newValue}}"
    },
    {
      "matchUpdateTypes": ["patch"],
      "commitMessage": "🐛 fix: update {{depName}} to {{newValue}}",
      "prTitle": "🐛 fix: update {{depName}} to {{newValue}}"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["major", "minor"],
      "commitMessage": "🔧 chore: update {{depName}} to {{newValue}}",
      "prTitle": "🔧 chore: update {{depName}} to {{newValue}}"
    },
    {
      "matchPackageNames": ["@types/**"],
      "commitMessage": "🔧 chore: update {{depName}} to {{newValue}}",
      "prTitle": "🔧 chore: update {{depName}} to {{newValue}}"
    },
    {
      "matchCategories": ["security"],
      "commitMessage": "🔒 fix: update {{depName}} to {{newValue}}",
      "prTitle": "🔒 fix: update {{depName}} to {{newValue}}"
    }
  ]
}
